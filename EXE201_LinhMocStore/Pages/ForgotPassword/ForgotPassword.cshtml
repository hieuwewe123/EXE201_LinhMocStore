@page "/forgot-password"
@model EXE201_LinhMocStore.Pages.ForgotPassword.ForgotPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Forgot Password - LinhMocStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .forgot-container {
            max-width: 400px;
            width: 100%;
            padding: 2rem;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .forgot-title {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #2c3e50;
            font-weight: 700;
            font-size: 1.5rem;
        }

        .btn-forgot {
            width: 100%;
            padding: 0.75rem;
            font-size: 1.1rem;
        }

        .text-danger, .text-success {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.95rem;
        }
    </style>
</head>
<body>
    <div class="forgot-container">
        <h3 class="forgot-title">Quên mật khẩu</h3>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Username" class="form-label">Username</label>
                <input asp-for="Input.Username" class="form-control" placeholder="Nhập username" />
            </div>
            <button type="submit" class="btn btn-primary btn-forgot">Gửi mã xác nhận</button>
            <a href="/login" class="btn btn-outline-secondary btn-forgot mt-2">Quay lại đăng nhập</a>
        </form>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger">@Model.ErrorMessage</div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="text-success">@Model.SuccessMessage</div>
        }
    </div>
</body>
</html>

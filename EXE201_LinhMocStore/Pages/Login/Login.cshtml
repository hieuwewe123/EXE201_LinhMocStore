@page "/login"
@model EXE201_LinhMocStore.Pages.Login.LoginModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - LinhMocStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #e0eafc, #cfdef3);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            max-width: 450px;
            width: 100%;
            padding: 2.5rem;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease;
        }

            .login-container:hover {
                transform: translateY(-5px);
            }

        .login-title {
            text-align: center;
            margin-bottom: 2rem;
            color: #2c3e50;
            font-weight: 700;
            font-size: 1.8rem;
        }

        .login-subtitle {
            text-align: center;
            margin-bottom: 2rem;
            color: #6c757d;
            font-size: 1rem;
        }

        .form-label {
            font-weight: 600;
            color: #34495e;
            font-size: 0.95rem;
        }

        .form-control {
            border-radius: 8px;
            padding: 0.9rem;
            border: 1px solid #ced4da;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            }

        .btn-login {
            width: 100%;
            padding: 0.9rem;
            font-size: 1.1rem;
            font-weight: 600;
            background: linear-gradient(90deg, #007bff, #00c4ff);
            border: none;
            border-radius: 8px;
            transition: background 0.3s ease;
        }

            .btn-login:hover {
                background: linear-gradient(90deg, #0056b3, #0096cc);
            }

        .btn-register {
            width: 100%;
            padding: 0.9rem;
            font-size: 1.1rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        .text-danger {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.9rem;
            color: #dc3545;
        }

        .text-info {
            text-align: center;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            color: #17a2b8;
            background-color: #d1ecf1;
            border: 1px solid #bee5eb;
            border-radius: 8px;
            padding: 0.75rem;
        }

        .forgot-password {
            text-align: center;
            margin-top: 1rem;
        }

            .forgot-password a {
                color: #007bff;
                text-decoration: none;
                font-size: 0.9rem;
            }

                .forgot-password a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <h3 class="login-title">Welcome to LinhMocStore</h3>
        
        @if (!string.IsNullOrEmpty(Model.ReturnUrl))
        {
            <div class="login-subtitle">
                <i class="fas fa-info-circle me-2"></i>
                Vui lòng đăng nhập để tiếp tục
            </div>
        }
        
        <form method="post">
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            
            <div class="mb-4">
                <label asp-for="Input.Username" class="form-label">Username</label>
                <input asp-for="Input.Username" class="form-control" placeholder="Enter your username" />
            </div>
            <div class="mb-4">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
            </div>

            <button type="submit" class="btn btn-primary btn-login">Sign In</button>
            <a href="/register" class="btn btn-outline-secondary btn-register">Register</a>
        </form>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger">@Model.ErrorMessage</div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@page "/register"
@model EXE201_LinhMocStore.Pages.Register.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register - LinhMocStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .register-container {
            max-width: 450px;
            width: 100%;
            padding: 2.5rem;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }

        .register-title {
            text-align: center;
            margin-bottom: 2rem;
            color: #2c3e50;
            font-weight: 700;
            font-size: 1.8rem;
        }

        .btn-register {
            width: 100%;
            padding: 0.9rem;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .text-danger {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.9rem;
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h3 class="register-title">Đăng ký tài khoản</h3>
        <form method="post">
            <div class="mb-4">
                <label asp-for="Input.Username" class="form-label">Username</label>
                <input asp-for="Input.Username" class="form-control" placeholder="Nhập username" />
            </div>
            <div class="mb-4">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Nhập password" />
            </div>
            <div class="mb-4">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Nhập email" />
            </div>
            <button type="submit" class="btn btn-success btn-register">Đăng ký</button>
            <a href="/login" class="btn btn-outline-primary btn-register mt-2">Quay lại đăng nhập</a>
        </form>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger">@Model.ErrorMessage</div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="text-success text-center mt-3">@Model.SuccessMessage</div>
        }
    </div>
</body>
</html>

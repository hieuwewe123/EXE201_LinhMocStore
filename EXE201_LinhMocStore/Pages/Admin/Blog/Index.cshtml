@page
@model EXE201_LinhMocStore.Pages.Admin.Blog.IndexModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h1 class="mt-4">Quản lý bài viết</h1>
<a class="btn btn-primary mb-3" href="/admin/blog/create">Thêm bài viết</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tiêu đề</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Blogs)
        {
            <tr>
                <td>@b.BlogId</td>
                <td>@b.Title</td>
                <td>@b.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/admin/blog/edit?id=@b.BlogId">Sửa</a>
                    <a class="btn btn-sm btn-danger" href="/admin/blog/delete?id=@b.BlogId" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@page
@model EXE201_LinhMocStore.Pages.Admin.Payment.CreateModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h1 class="mt-4">Thêm thanh toán</h1>
<form method="post">
    <div class="mb-3">
        <label asp-for="Payment.OrderId" class="form-label"></label>
        <select asp-for="Payment.OrderId" class="form-select">
            <option value="">-- Chọn đơn hàng --</option>
            @foreach (var order in Model.Orders)
            {
                <option value="@order.OrderId">#@order.OrderId - @order.User?.NormalName</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Payment.Content" class="form-label"></label>
        <input asp-for="Payment.Content" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Payment.Price" class="form-label"></label>
        <input asp-for="Payment.Price" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label asp-for="Payment.TransactionCode" class="form-label"></label>
        <input asp-for="Payment.TransactionCode" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Payment.Status" class="form-label"></label>
        <input asp-for="Payment.Status" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a href="/admin/payment" class="btn btn-secondary">Quay lại</a>
</form>
